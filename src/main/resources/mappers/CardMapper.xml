<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mappers.CardMapper">
    <resultMap id="CardResultMap" type="models.Card">
        <id property="id" column="id" />
        <result property="name" column="name" />
        <result property="enabled" column="enabled" />
        <result property="createdAt" column="created_at" />
        <result property="updatedAt" column="updated_at" />
    </resultMap>

    <select id="findAllEnabled" resultMap="CardResultMap">
        SELECT * FROM card WHERE enabled = 1
    </select>

    <select id="findById" parameterType="int" resultMap="CardResultMap">
        SELECT * FROM card WHERE id = #{id}
    </select>

    <select id="findByName" parameterType="string" resultMap="CardResultMap">
        SELECT * FROM card WHERE UPPER(name) = UPPER(#{name})
    </select>

    <select id="findAll" resultMap="CardResultMap">
        SELECT * FROM card
    </select>

    <insert id="insert" parameterType="models.Card" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO card (name, enabled, created_at)
        VALUES (#{name}, #{enabled}, CURRENT_TIMESTAMP)
    </insert>

    <update id="update" parameterType="models.Card">
        UPDATE card SET
            name = #{name},
            enabled = #{enabled},
            updated_at = CURRENT_TIMESTAMP
        WHERE id = #{id}
    </update>

    <delete id="delete" parameterType="int">
        DELETE FROM card WHERE id = #{id}
    </delete>
</mapper>

