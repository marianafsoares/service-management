<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mappers.BankMapper">

    <resultMap id="BankResultMap" type="models.Bank">
        <id property="id" column="id" />
        <result property="name" column="name" />
        <result property="enabled" column="enabled" />
        <result property="createdAt" column="created_at" />
        <result property="updatedAt" column="updated_at" />
    </resultMap>

    <select id="findAllEnabled" resultMap="BankResultMap">
        SELECT * FROM bank WHERE enabled = 1
    </select>

    <select id="findById" parameterType="int" resultMap="BankResultMap">
        SELECT * FROM bank WHERE id = #{id}
    </select>

    <select id="findByName" parameterType="string" resultMap="BankResultMap">
        SELECT * FROM bank WHERE UPPER(name) = UPPER(#{name})
    </select>

    <select id="findAll" resultMap="BankResultMap">
        SELECT * FROM bank
    </select>

    <insert id="insert" parameterType="models.Bank" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO bank (name, enabled, created_at)
        VALUES (#{name}, #{enabled}, CURRENT_TIMESTAMP)
    </insert>

    <update id="update" parameterType="models.Bank">
        UPDATE bank SET
            name = #{name},
            enabled = #{enabled},
            updated_at = CURRENT_TIMESTAMP
        WHERE id = #{id}
    </update>

    <delete id="delete" parameterType="int">
        DELETE FROM bank WHERE id = #{id}
    </delete>
</mapper>
