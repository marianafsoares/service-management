<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 https://maven.apache.org/xsd/assembly-1.1.3.xsd">
    <id>dist</id>
    <formats>
        <format>dir</format>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <dependencySets>
        <dependencySet>
            <outputDirectory>app/lib</outputDirectory>
            <useProjectArtifact>false</useProjectArtifact>
            <unpack>false</unpack>
            <scope>runtime</scope>
        </dependencySet>
    </dependencySets>
    <files>
        <file>
            <source>${project.build.directory}/${project.build.finalName}.jar</source>
            <outputDirectory>app</outputDirectory>
        </file>
    </files>
    <fileSets>
        <fileSet>
            <directory>config</directory>
            <outputDirectory>config</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
            <useDefaultExcludes>true</useDefaultExcludes>
        </fileSet>
        <fileSet>
            <directory>src/main/resources/db/migration</directory>
            <outputDirectory>config/db/migration</outputDirectory>
            <includes>
                <include>**/*.sql</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>src/main/resources/mappers</directory>
            <outputDirectory>config/mappers</outputDirectory>
            <includes>
                <include>**/*.xml</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>installer/windows/scripts</directory>
            <outputDirectory>app/scripts</outputDirectory>
            <includes>
                <include>flyway-migrate.bat</include>
                <include>abrir-logs.bat</include>
                <include>diagnostico-app.bat</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>installer/windows/launch4j</directory>
            <outputDirectory>installer/launch4j</outputDirectory>
            <includes>
                <include>gestion-launch4j.xml</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>installer/windows/assets</directory>
            <outputDirectory>installer/assets</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>installer/windows/inno</directory>
            <outputDirectory>installer/inno</outputDirectory>
            <includes>
                <include>gestion.iss</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>docs</directory>
            <outputDirectory>docs</outputDirectory>
            <includes>
                <include>installer.md</include>
                <include>troubleshooting.md</include>
                <include>mysql_grant_gestion_system.sql</include>
            </includes>
            <useDefaultExcludes>true</useDefaultExcludes>
        </fileSet>
    </fileSets>
</assembly>
